<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrarUsuario" android:orientation="vertical" android:layout_gravity="center_horizontal">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/iwUsuario" android:scaleType="fitCenter"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_icono_usuario" android:layout_gravity="center_horizontal"/>
    <TextView
            android:text="Correo o Usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/twEmail" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/iwUsuario"
            app:layout_constraintHorizontal_bias="0.501" android:layout_gravity="center_horizontal"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/txtUsuario"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/twEmail" android:layout_gravity="center_horizontal"/>
    <TextView
            android:text="Contraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/twPassword"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtUsuario"
            android:layout_gravity="center_horizontal"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:inputType="textPassword"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/editText2"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/twPassword"
            android:layout_gravity="center_horizontal"/>
    <TextView
            android:text="Confirmar Contraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/twPassword3"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtUsuario"
            android:layout_gravity="center_horizontal"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:inputType="textPassword"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/editText4"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/twPassword"
            android:layout_gravity="center_horizontal"/>
    <Button
            android:text="Registrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegistrarse"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btnIngresar" app:layout_constraintHorizontal_bias="0.501"
            android:background="@drawable/borde_redondo" android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_icono_nuevo_usuario" android:textColor="@color/browser_actions_bg_grey"
            android:padding="10dp" android:width="150dp" android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

</LinearLayout>