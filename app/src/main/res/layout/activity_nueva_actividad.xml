<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NuevaActividad" android:orientation="horizontal">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_margin="10dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvAgregarActividad"
                    android:text="@string/txt_nueva_actividad"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" android:gravity="center_horizontal"
                    android:textStyle="bold"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/etEtiqueta" android:hint="@string/txt_etiqueta" android:layout_marginTop="10dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <EditText
                        android:layout_width="318dp"
                        android:layout_height="wrap_content"
                        android:inputType="time"
                        android:ems="10"
                        android:id="@+id/etHora" android:hint="@string/txt_hora" android:layout_marginTop="10dp"/>
                <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true" app:srcCompat="@drawable/ic_icono_reloj"
                        android:id="@+id/fabHora" android:layout_weight="1"
                        app:backgroundTint="@color/colorPrimary"
                        android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvCategoria"/>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="43dp" android:id="@+id/sprCategoria" android:layout_marginTop="10dp"/>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="43dp" android:id="@+id/sprMeta" android:layout_marginTop="10dp"/>
            <Button
                    android:text="@string/txt_agregar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnAgregar"
                    android:background="@drawable/borde_redondo" android:layout_margin="10dp"/>
            <Button
                    android:text="@string/txt_cancelar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnCancelar"
                    android:background="@drawable/borde_redondo" android:layout_margin="5dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>